{
  "manifest_version": 3,
  "name": "WhatsBlitz",
  "version": "1.2",
  "description": "Quickly fill and send WhatsApp messages with style.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ]
}
